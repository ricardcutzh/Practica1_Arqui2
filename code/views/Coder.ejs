<% include Header.ejs %>
<div id="content-wrapper">

  <div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="index.html">Codificador</a>
      </li>
      <li class="breadcrumb-item active">Ingreso de Frases</li>
    </ol>

    <!-- Page Content -->
    <h1>Codificador Morse</h1>
    <hr>
    <div class="container">
      <div class="form-group">
        <div class="form-row">
          <h1>
            <p class="text-center">Ingreso de Datos</p>
          </h1>
        </div>
        <form action="/WEB/save_string" method="POST">
          <div class="form-row">
            <div class="col-md-12">
              <div class="form-label-group">
                <input type="text" id="frase" name="frase" class="form-control" placeholder="First name" required="required"
                  >
                <!--<label for="Frase">Ingrese la frase a codificar:</label>-->
              </div>
            </div>
          </div>
          <br>
          <div class="form-row">
            <div class="col-md-12">
              <div class="form-label-group">
                <select id="tipo" name="tipo" class="form-control" autofocus="autofocus">
                  <option value="Traducccion">Traducccion</option>
                  <option value="Aprendizaje">Aprendizaje</option>
                </select>
              </div>
            </div>
          </div>
          <br>
          <div class="form-row">
            <div class="col-md-12">
              <div class="form-label-group">
                <button type="submit" class="btn btn-success btn-block">Enviar</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <br>
    </div>
    <br>
    <div class="container-fluid">
      <div class="card mb-3">
        <div class="card-header">
          <i class="fas fa-table"></i>
          Frases Ingresadas
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Frase</th>
                  <th>Hora</th>
                  <th>Tipo</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>ID</th>
                  <th>Frase</th>
                  <th>Hora</th>
                  <th>Tipo</th>
                </tr>
              </tfoot>
              <tbody>
                <% for(var i = 0; i < frases.length; i++){%>
                  <tr>
                    <td><%=frases[i].id %></td>
                    <td><%=frases[i].cadena %></td>
                    <td><%=frases[i].time %></td>
                    <td><%=frases[i].tipo %></td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->

    <!-- Sticky Footer -->
    <footer class="sticky-footer">
      <div class="container my-auto">
        <div class="copyright text-center my-auto">
          <span>Copyright Â© Arquitectura de Computadores 2 2019</span>
        </div>
      </div>
    </footer>

  </div>
  <!-- /.content-wrapper -->
  <% include Footer.ejs %>